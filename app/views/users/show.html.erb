<% @page_title = @user.username %>
	
	<span class="glyphicon glyphicon-chevron-left"></span><%= link_to(' Back to Main Menu', {:action=>'index'}, :class=>'back-list') %>

	<h2><%= "Hello, #{@user.username}" %></h2>
	<br>
	<h4>Account Information:</h4>
	<br>
		<table class="table">
			<tr>
				<th>Username: </th>
				<td><%= @user.username %> </td>
			</tr>
			<tr>
				<th>Email: </th>
				<td><%= @user.email %> </td>
			</tr>
			<tr>
				<th>Position: </th>
				<td><%= @user.position %> </td>
			</tr>

		</table>
	<%= button_to('Edit Information', {:action=>'edit', :id=>@user.id}, :class=>'btn btn-info') %>

	<hr>

	<h2>Posts</h2>
	<table class="table">
		<tr>
			<th>Title</th>
			<th>Content</th>
			<th>Votes</th>
			<th>Subraddits</th>
			<th>Action</th>
		</tr>
		<% @user.posts.each do |post| %>

			<tr>
				<td><%= post.title %></td>
				<td><%= post.content %></td>
				<td><%= post.votes %></td>
				<td>
					<% post.subraddits.each do |sub| %>
						<%= sub.title %>
					<% end %>
				</td>
				<td><%= link_to('Edit Post', {:controller=>'posts', :action=>'edit', :id => post.id}) %>
			</tr>
		<% end %>
	</table>

	<%= button_to("New Post", {:controller=>'posts', :action=>'new'}, :class=>'btn btn-info') %>

	
	<hr>

	<h2>Comments</h2>

	<table class="table">
		<tr>
			<th>Comment</th>
			<th>on Post</th>
			<th>Posted At</th>
			<th>Votes</th>
			<th>Action</th>
		</tr>

		<% @user.comments.each do |comment| %>
			<tr>
				<td><%= comment.content %></td>
				<td><%= comment.post.title %></td>
				<td><%= comment.created_at %></td>
				<td><%= comment.votes %></td>
				<td><%= link_to('View Comment', '#') %></td>
				<td><%= link_to('Edit/Delete Comment', '#') %></td>
			</tr>
		<% end %>
	</table>

